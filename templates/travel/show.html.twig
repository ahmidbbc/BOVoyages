{% extends 'base.html.twig' %}

{% block title %}Travel{% endblock %}

{% block body %}
    <h1>Voyage</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Destination</th>
                <td>{{ travel.destination }}</td>
            </tr>
            <tr>
                <th>Détail</th>
                <td>{{ travel.details }}</td>
            </tr>
            <tr>
                <th>Date Debut</th>
                <td>{{ travel.fromDate ? travel.fromDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date Fin</th>
                <td>{{ travel.toDate ? travel.toDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Maximum de voyageurs</th>
                <td>{{ travel.maxGuests }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ travel.retailPrice }}</td>
            </tr>
            <tr>
                <th>Reduction</th>
                <td>{{ travel.discountRate }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ travel.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('travel_index') }}">Retour a la liste</a>

    <a href="{{ path('travel_edit', {'id': travel.id}) }}">éditer</a>

    {{ include('travel/_delete_form.html.twig') }}
{% endblock %}
