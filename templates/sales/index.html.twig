{% extends 'base.html.twig' %}

{% block title %}Voyages à prix discount{% endblock %}

{% block body %}

<div class="row justify-content-center">
    <div class="col-9">

    <h1 class="text-center">Voyages en cours</h1>

    {% for sale in salesList %}
        <h2 class="mt-5">{{ sale.destination }}</h2>
        <div class="row justify-content-center">
            <div class="col-10 bg-light rounded">
                <div class="row p-2">
                    <div class="col-3">
                        <img src="{{ sale.img }}" alt="" class="img-fluid">
                    </div>
                    <div class="col-7">
                        <h3>{{ sale.destination }}</h3><span class="badge badge-danger">-{{ sale.discountRate }} %</span>
                        <p>{{ sale.description }}</p>
                        <del class="badge-pill badge-secondary text-center line-">{{ sale.retailPrice }} €</del>
                        <div class="badge-pill badge-danger text-center font-weight-bold float-right">{{ sale.retailPrice * (1 - (sale.discountRate/100)) }} €</div>
                    </div>
                    <div class="col-2">
                        <a href="{{ path('sales_new', {'id' : sale.id} ) }}" class="btn btn-primary">
                            Réserver
                        </a>
                    </div>
                </div>

            </div>

         </div>
        <hr>

    {% endfor %}
    </div>


</div>
{% endblock %}
